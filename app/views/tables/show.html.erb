<%= render "layouts/menu" %>

<div class="container">
  <h3 class="text-center">Itens da mesa <%= @table.number %></h3>
  <div>
    <%= link_to 'Adicionar Item', new_item_path(@table.id) %>
  </div>
  <div class="d-flex" style="margin-top: 10px">
    <% @items.each do |item| %>
      <div class="card" style="width: 18rem; margin-left: 12px;">
        <div class="card-body">
          <h5 class="card-title">Mesa: <%= item.name %></h5>
        </div>
      </div>
    <% end %>
  </div>
</div>
