<%= render "layouts/menu" %>

<h1>Items</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Pre√ßo</th>
      <th scope="col">Quantidade</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <th scope="row"><%= item.id %></th>
        <td><%= item.name %></td>
        <td>R$ <%= item.price %></td>
        <td><%= item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr class="table-success">
      <td><%= total_label %></td>
      <td colspan="2"></td>
      <td ><%= current_total %></td>
    </tr>
  </tfoot>
</table>

<br>

